# Server Configuration
PORT=3002
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/smart-quote-generator

# JWT Secrets
JWT_SECRET=your-admin-jwt-secret-here
JWT_SECRET_CUSTOMER=your-customer-jwt-secret-here

